<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_default_layout_match_parent_with_background"
    tools:context=".ui.fragments.SliderFragment">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/SliderFragment_ViewPager"
        style="@style/style_default_layout_match_parent"
        android:layout_above="@+id/SliderFragment_Skip" />

    <LinearLayout
        android:id="@+id/SliderFragment_DotLayout"
        style="@style/style_default_layout_wrap_match"
        android:layout_above="@+id/SliderFragment_Skip"
        android:gravity="center"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/SliderFragment_Skip"
        style="@style/style_default_layout_wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimens_m"
        android:background="@null"
        android:fontFamily="@font/cairo_bold"
        android:text="@string/skip"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/txt_size_m" />
</RelativeLayout>