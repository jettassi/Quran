<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/defultValueOne"
  >

  <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/decriptionImage1"
        android:src="@drawable/anglepointingmoresmall"
        android:layout_marginLeft="@dimen/defultValueSixTeen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/defultValueTen"
        />
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/defultValueTen"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_marginRight="@dimen/marginRightLeftSeekbar"
        android:gravity="center"
        android:text="@string/nameTextDefult"
        android:textColor="@color/textColorTime"
        android:textSize="@dimen/textSize"
         />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/defultValueSixTeen"
        android:contentDescription="@string/decriptionImage"
        android:src="@drawable/iconqoran" />
  <View
      android:layout_width="match_parent"
      android:layout_below="@+id/imageView"
      android:layout_height="@dimen/defultValueOne"
      android:background="@color/colorPrimaryDark" />

</RelativeLayout>

