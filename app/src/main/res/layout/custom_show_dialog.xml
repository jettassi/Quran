<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_default_layout_wrap_match"
    android:background="@drawable/image_border"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/show_icon"
        android:layout_width="@dimen/dimens_xxl"
        android:layout_height="@dimen/dimens_xxl"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimens_l"
        android:layout_marginEnd="@dimen/dimens_l"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/show_text"
        style="@style/style_default_layout_wrap_match"
        android:layout_below="@+id/show_icon"
        android:layout_margin="@dimen/dimens_l"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_size_xl" />

    <LinearLayout
        style="@style/style_default_layout_wrap_match"
        android:layout_below="@+id/show_text"
        android:layout_marginBottom="@dimen/dimens_l"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BT_No"
            style="@style/style_button_custom_show_dialog"
            android:layout_marginEnd="@dimen/dimens_6xl"
            android:text="@string/textNo" />

        <Button
            android:id="@+id/BT_Yes"
            style="@style/style_button_custom_show_dialog"
            android:text="@string/textYes" />
    </LinearLayout>
</RelativeLayout>